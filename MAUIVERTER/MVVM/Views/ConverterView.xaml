<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MAUIVERTER.MVVM.Views.ConverterView"
             Title="ConverterView">
    
    <ContentPage.Resources>
        <ResourceDictionary>
            <Color x:Key="AppColor1">#10002B</Color>
            <Color x:Key="AppColor2">#240046</Color>
            <Color x:Key="AppColor3">#3C096C</Color>
            <Color x:Key="AppColor4">#5A189A</Color>
            <Color x:Key="TextColor">#fafafa</Color>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowDefinitions="*, *">

        <Grid Grid.Row="0" BackgroundColor="{StaticResource AppColor1}">

            <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">

                <Entry FontSize="100"
                       HorizontalTextAlignment="Center"
                       Text="100"
                       TextColor="{StaticResource TextColor}"/>

                <Picker HorizontalTextAlignment="Center" TextColor="{StaticResource TextColor}" 
                        ItemsSource="{Binding FormMeasures}"
                        SelectedItem="{Binding CurrentFormMeasure}"/>

            </VerticalStackLayout>
            
        </Grid>

        <Grid Grid.Row="1" BackgroundColor="{StaticResource AppColor3}">

            <VerticalStackLayout HorizontalOptions="FillAndExpand" VerticalOptions="Center">

                <Label FontSize="100"
                        HorizontalTextAlignment="Center"
                        Text="100"
                        TextColor="{StaticResource TextColor}"/>

                <Picker HorizontalTextAlignment="Center" TextColor="{StaticResource TextColor}"
                        ItemsSource="{Binding ToMeasures}"
                        SelectedItem="{Binding CurrentToMeasure}"/>

            </VerticalStackLayout>
            
        </Grid>

    </Grid>
    
</ContentPage>